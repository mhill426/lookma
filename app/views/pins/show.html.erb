<div class="row-fluid">
	<div class="span8 offset2">
		<div class="well">
			<%= image_tag @pin.image %>
			<%= link_to  %>
			<p>
			  <%= @pin.description %>
			</p>
			<p>
				<%= link_to @pin.user.name, @pin.user %>
			</p>	
			<% if current_user == @pin.user %>
				<%= link_to 'Edit', edit_pin_path(@pin) %> |
			<% end %>
			<%= link_to 'Back', pins_path %>
		</div>	
	</div>	
</div>


